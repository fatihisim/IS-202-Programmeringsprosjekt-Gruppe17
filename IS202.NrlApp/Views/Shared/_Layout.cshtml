<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NRL Obstacle Reporting System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IS202.NrlApp.styles.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <style>
        body {
            background-color: #ffffff;
            font-family: 'Segoe UI', 'Roboto', sans-serif;
            padding-bottom: 60px;
        }

        .navbar {
            background-color: #003366;
        }

        .navbar-brand {
            color: #ffffff !important;
            font-weight: 600;
            font-size: 1.2rem;
        }

        .nav-link {
            color: #e6e6e6 !important;
            transition: 0.2s;
        }

        .nav-link:hover {
            color: #4da3ff !important;
        }

        /* User dropdown styling */
        .user-dropdown-btn {
            background-color: transparent;
            border: 1px solid rgba(255, 255, 255, 0.3);
            color: #ffffff;
            padding: 0.375rem 0.75rem;
            border-radius: 0.25rem;
            transition: 0.2s;
        }

        .user-dropdown-btn:hover {
            background-color: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.5);
        }

        .dropdown-menu {
            border-radius: 0.5rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border: none;
            margin-top: 0.5rem;
        }

        .dropdown-item {
            padding: 0.5rem 1rem;
            transition: 0.2s;
        }

        .dropdown-item:hover {
            background-color: #f0f0f0;
        }

        /* Role badge */
        .role-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            margin-left: 0.5rem;
        }

        .role-badge-registerforer {
            background-color: #dc3545;
            color: white;
        }

        .role-badge-pilot {
            background-color: #198754;
            color: white;
        }

        .role-badge-admin {
            background-color: #ffc107;
            color: black;
        }

        /* Toast notification (fixed top-center) */
        .toast-notification {
            position: fixed;
            top: 80px;
            left: 50%;
            transform: translateX(-50%);
            max-width: 500px;
            width: 90%;
            z-index: 9999;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.2);
            animation: slideDown 0.3s ease-out;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translate(-50%, -20px);
            }
            to {
                opacity: 1;
                transform: translate(-50%, 0);
            }
        }

        @@media (max-width: 576px) {
            .toast-notification {
                top: 70px;
                width: 95%;
                font-size: 0.9rem;
            }
        }

        .role-badge-registerforer {
            background-color: #dc3545;
            color: white;
        }

        .role-badge-pilot {
            background-color: #198754;
            color: white;
        }

        .role-badge-admin {
            background-color: #6f42c1;
            color: white;
        }

        .role-badge-pilot {
            background-color: #0d6efd;
            color: white;
        }

        footer {
            background-color: #f8f9fa;
            border-top: 1px solid #e2e2e2;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        footer p {
            margin: 0;
            padding: 10px;
            font-size: 0.9rem;
            color: #666;
        }

        .btn-primary {
            background-color: #4da3ff;
            border-color: #4da3ff;
        }

        .btn-primary:hover {
            background-color: #368ce2;
        }

        /* Alert styling */
        .alert {
            border-radius: 0.5rem;
            border: none;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-airplane"></i> NRL Obstacle Reporting
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            var userRole = User.FindFirst("Role")?.Value;
                            var isPilot = userRole == "Pilot" || string.IsNullOrEmpty(userRole);
                            var isRegisterforer = userRole == "Registerfører" || userRole == "Admin";

                            <!-- Report (bare for Piloter) -->
                            if (isPilot)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Obstacle" asp-action="DataForm">
                                        <i class="bi bi-flag-fill"></i> Report
                                    </a>
                                </li>
                            }

                            <!-- My Reports (bare for Piloter) -->
                            if (isPilot)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Obstacle" asp-action="MyReports">
                                        <i class="bi bi-file-earmark-person"></i> My Reports
                                    </a>
                                </li>
                            }

                            <!-- Dashboard (bare for Registerfører og Admin) -->
                            if (isRegisterforer)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Obstacle" asp-action="Dashboard">
                                        <i class="bi bi-speedometer2"></i> Dashboard
                                    </a>
                                </li>
                            }

                            <!-- All Reports (bare for innloggede brukere) -->
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Obstacle" asp-action="List">
                                    <i class="bi bi-list-task"></i> All Reports
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            var userRole = User.FindFirst("Role")?.Value;
                            var userEmail = User.Identity.Name;
                            var userName = User.FindFirst("FullName")?.Value ?? userEmail;

                            var roleBadgeClass = userRole switch
                            {
                                "Registerfører" => "role-badge role-badge-registerforer",
                                "Admin" => "role-badge role-badge-admin",
                                _ => "role-badge role-badge-pilot"
                            };

                            var roleDisplayName = userRole switch
                            {
                                "Registerfører" => "NRL Officer",
                                "Admin" => "Admin",
                                _ => "Pilot"
                            };

                            <!-- User dropdown -->
                            <li class="nav-item dropdown">
                                <button class="btn btn-sm user-dropdown-btn dropdown-toggle" type="button" 
                                        id="userDropdown" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i>
                                    @userName
                                    <span class="@roleBadgeClass">@roleDisplayName</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <span class="dropdown-item-text">
                                            <strong>@userName</strong><br />
                                            <small class="text-muted">@userEmail</small>
                                        </span>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Obstacle" asp-action="MyReports">
                                            <i class="bi bi-file-earmark-person me-2"></i>My Reports
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        @* else bloğu kaldırıldı - unauthenticated kullanıcılar için navbar linkleri yok *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- TempData meldinger (fixed top-center toast) -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show toast-notification" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show toast-notification" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show toast-notification" role="alert">
            <i class="bi bi-info-circle-fill me-2"></i>@TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="container pb-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center">
        <p>© 2025 NRL Obstacle Reporting System – Group 17 | University of Agder</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Auto-dismiss alerts after 5 seconds
        $(document).ready(function() {
            setTimeout(function() {
                $('.alert').fadeOut('slow', function() {
                    $(this).alert('close');
                });
            }, 5000);
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
