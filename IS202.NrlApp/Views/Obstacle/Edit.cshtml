@model IS202.NrlApp.Models.ObstacleData
@using System.Security.Claims
@{
    ViewData["Title"] = "Edit Report";
    var obstacleId = ViewBag.ObstacleId;
    var currentUserRole = User.FindFirst("Role")?.Value;
    var isAdmin = currentUserRole == "Registerf√∏rer" || currentUserRole == "Admin";
}

<div class="container my-4">
    <div class="mb-4">
        <h2 class="mb-0">
            <i class="bi bi-pencil-square me-2 text-primary"></i>Edit Report #@obstacleId
        </h2>
        <p class="text-muted mb-0">Update the obstacle details below</p>
    </div>

    @if (ViewBag.CurrentStatus == "Rejected" && !isAdmin)
    {
        <div class="alert alert-warning mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Note:</strong> This report was rejected. After editing, it will be resubmitted with "Pending" status for a new review.
        </div>
    }

    @if (ViewBag.CurrentStatus == "Pending" && !isAdmin)
    {
        <div class="alert alert-warning mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Note:</strong> This report is pending review. Any changes will keep the "Pending" status.
        </div>
    }

    <div class="row g-4">
        @* Formkolonne *@
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@obstacleId" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="ObstacleType" class="form-label">
                                Obstacle type <span class="text-danger">*</span>
                            </label>
                            <select asp-for="ObstacleType" class="form-select" required>
                                <option value="">-- Select type --</option>
                                <option>Crane</option>
                                <option>Mast</option>
                                <option>Power line</option>
                                <option>Tower</option>
                                <option>Building</option>
                                <option>Other</option>
                            </select>
                            <span asp-validation-for="ObstacleType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Comment" class="form-label">Comment (optional)</label>
                            <textarea asp-for="Comment" class="form-control" rows="3" 
                                      placeholder="Short description, height if known, nearby reference..."></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-12 col-sm-6 mb-3">
                                <label asp-for="Latitude" class="form-label">Latitude <span class="text-danger">*</span></label>
                                <input asp-for="Latitude" class="form-control" placeholder="Click the map" readonly />
                                <span asp-validation-for="Latitude" class="text-danger"></span>
                            </div>
                            <div class="col-12 col-sm-6 mb-3">
                                <label asp-for="Longitude" class="form-label">Longitude <span class="text-danger">*</span></label>
                                <input asp-for="Longitude" class="form-control" placeholder="Click the map" readonly />
                                <span asp-validation-for="Longitude" class="text-danger"></span>
                            </div>
                        </div>

                        @* Skjulte felt *@
                        <input type="hidden" asp-for="GeometryType" />
                        <input type="hidden" asp-for="GeoJsonData" />

                        <div class="mb-3">
                            <button type="button" id="geoBtn" class="btn btn-primary">
                                <i class="bi bi-geo-alt-fill me-1"></i> Use my location
                            </button>
                        </div>

                        <div class="d-grid gap-2 d-md-flex">
                            <button type="submit" class="btn btn-success btn-lg flex-md-fill">
                                <i class="bi bi-send-fill me-1"></i> Save Changes
                            </button>
                            @if (isAdmin)
                            {
                                <a asp-action="Dashboard" class="btn btn-secondary btn-lg flex-md-fill">
                                    <i class="bi bi-x-circle me-1"></i> Cancel
                                </a>
                            }
                            else
                            {
                                <a asp-action="MyReports" class="btn btn-secondary btn-lg flex-md-fill">
                                    <i class="bi bi-x-circle me-1"></i> Cancel
                                </a>
                            }
                        </div>
                    </form>
                </div>
            </div>
            <small class="text-muted d-block mt-2">
                <i class="bi bi-lightbulb"></i> Use the map toolbar to draw: line (‚îÅ) for cables/wires, area (‚¨ü) for buildings, circle (‚≠ï) for zones, or point (üìç) for towers. You can edit or delete shapes using the toolbar buttons.
            </small>
        </div>

        @* Kartkolonne *@
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <i class="bi bi-map me-2"></i>Map
                </div>
                <div class="card-body p-0">
                    <div id="editMap" style="height: 500px;"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet.draw/1.0.4/leaflet.draw.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet.draw/1.0.4/leaflet.draw.js"></script>

    <script>
        (function () {
            const latInput = document.getElementById("Latitude");
            const lonInput = document.getElementById("Longitude");
            const geoTypeInput = document.getElementById("GeometryType");
            const geoJsonInput = document.getElementById("GeoJsonData");
            const geoBtn = document.getElementById("geoBtn");

            // Henter initielle verdier
            const initialLat = parseFloat(latInput.value) || 58.146;
            const initialLon = parseFloat(lonInput.value) || 7.995;

            // Initialiserer kart
            const map = L.map('editMap').setView([initialLat, initialLon], 12);
            
            // Grunnlag: Satellittbilde
            L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {
                maxZoom: 19,
                maxNativeZoom: 18,
                attribution: '&copy; Esri'
            }).addTo(map);
            
            // Overlag: Etiketter
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                opacity: 0.4,
                attribution: '&copy; OpenStreetMap'
            }).addTo(map);

            // Deaktiverer rullehjulzoom som standard
            map.scrollWheelZoom.disable();
            map.on('focus', () => map.scrollWheelZoom.enable());
            map.on('blur',  () => map.scrollWheelZoom.disable());

            // FeatureGroup for tegninger
            const drawnItems = new L.FeatureGroup();
            map.addLayer(drawnItems);

            // Leaflet.draw kontroller
            const drawControl = new L.Control.Draw({
                draw: {
                    polyline: {
                        shapeOptions: {
                            color: '#00ffff',
                            weight: 4
                        }
                    },
                    polygon: {
                        shapeOptions: {
                            color: '#3388ff',
                            weight: 3
                        }
                    },
                    circle: {
                        shapeOptions: {
                            color: '#ff7800',
                            weight: 3
                        }
                    },
                    rectangle: false,
                    marker: {
                        icon: new L.Icon.Default()
                    },
                    circlemarker: false
                },
                edit: {
                    featureGroup: drawnItems,
                    remove: true
                }
            });
            map.addControl(drawControl);

            // Laster inn eksisterende GeoJSON hvis tilgjengelig
            if (geoJsonInput.value) {
                try {
                    const geoJsonData = JSON.parse(geoJsonInput.value);
                    const geomType = geoTypeInput.value;
                    
                    if (geomType === 'Circle' && geoJsonData.properties && geoJsonData.properties.radius) {
                        // Circle
                        const circle = L.circle([geoJsonData.coordinates[1], geoJsonData.coordinates[0]], {
                            radius: geoJsonData.properties.radius,
                            color: '#ff7800',
                            weight: 3
                        });
                        drawnItems.addLayer(circle);
                    } else if (geomType === 'LineString') {
                        // LineString med cyan farge
                        const layer = L.geoJSON(geoJsonData, {
                            style: {
                                color: '#00ffff',
                                weight: 4,
                                opacity: 0.9
                            }
                        });
                        layer.eachLayer(function(l) {
                            drawnItems.addLayer(l);
                        });
                    } else if (geomType === 'Polygon') {
                        // Polygon
                        const layer = L.geoJSON(geoJsonData, {
                            style: {
                                color: '#3388ff',
                                weight: 3,
                                opacity: 0.9
                            }
                        });
                        layer.eachLayer(function(l) {
                            drawnItems.addLayer(l);
                        });
                    } else {
                        // Point (marker)
                        const layer = L.geoJSON(geoJsonData);
                        layer.eachLayer(function(l) {
                            drawnItems.addLayer(l);
                        });
                    }
                    map.fitBounds(drawnItems.getBounds());
                } catch (e) {
                    console.log('Kunne ikke parse eksisterende GeoJSON');
                }
            }

            // N√•r en form tegnes
            map.on(L.Draw.Event.CREATED, function (event) {
                const layer = event.layer;
                const type = event.layerType;
                
                // Fjerner tidligere tegninger
                drawnItems.clearLayers();
                
                // Legger til ny tegning
                drawnItems.addLayer(layer);
                
                // Konverterer til GeoJSON og lagrer
                const geoJson = layer.toGeoJSON();
                
                if (type === 'marker') {
                    const latlng = layer.getLatLng();
                    latInput.value = latlng.lat.toFixed(6);
                    lonInput.value = latlng.lng.toFixed(6);
                    geoTypeInput.value = 'Point';
                    geoJsonInput.value = JSON.stringify(geoJson.geometry);
                } else if (type === 'polyline') {
                    const latlngs = layer.getLatLngs();
                    if (latlngs.length > 0) {
                        latInput.value = latlngs[0].lat.toFixed(6);
                        lonInput.value = latlngs[0].lng.toFixed(6);
                    }
                    geoTypeInput.value = 'LineString';
                    geoJsonInput.value = JSON.stringify(geoJson.geometry);
                } else if (type === 'polygon') {
                    const latlngs = layer.getLatLngs()[0];
                    if (latlngs.length > 0) {
                        latInput.value = latlngs[0].lat.toFixed(6);
                        lonInput.value = latlngs[0].lng.toFixed(6);
                    }
                    geoTypeInput.value = 'Polygon';
                    geoJsonInput.value = JSON.stringify(geoJson.geometry);
                } else if (type === 'circle') {
                    const latlng = layer.getLatLng();
                    const radius = layer.getRadius();
                    latInput.value = latlng.lat.toFixed(6);
                    lonInput.value = latlng.lng.toFixed(6);
                    geoTypeInput.value = 'Circle';
                    geoJsonInput.value = JSON.stringify({
                        type: "Point",
                        coordinates: [parseFloat(latlng.lng.toFixed(6)), parseFloat(latlng.lat.toFixed(6))],
                        properties: { radius: radius }
                    });
                }
            });

            // N√•r en form redigeres
            map.on(L.Draw.Event.EDITED, function (event) {
                const layers = event.layers;
                layers.eachLayer(function (layer) {
                    const geoJson = layer.toGeoJSON();
                    
                    if (layer instanceof L.Marker) {
                        const latlng = layer.getLatLng();
                        latInput.value = latlng.lat.toFixed(6);
                        lonInput.value = latlng.lng.toFixed(6);
                        geoJsonInput.value = JSON.stringify(geoJson.geometry);
                    } else if (layer instanceof L.Circle) {
                        const latlng = layer.getLatLng();
                        const radius = layer.getRadius();
                        latInput.value = latlng.lat.toFixed(6);
                        lonInput.value = latlng.lng.toFixed(6);
                        geoJsonInput.value = JSON.stringify({
                            type: "Point",
                            coordinates: [parseFloat(latlng.lng.toFixed(6)), parseFloat(latlng.lat.toFixed(6))],
                            properties: { radius: radius }
                        });
                    } else {
                        const latlngs = layer.getLatLngs ? layer.getLatLngs() : null;
                        if (latlngs && latlngs.length > 0) {
                            const firstPoint = Array.isArray(latlngs[0]) ? latlngs[0][0] : latlngs[0];
                            latInput.value = firstPoint.lat.toFixed(6);
                            lonInput.value = firstPoint.lng.toFixed(6);
                        }
                        geoJsonInput.value = JSON.stringify(geoJson.geometry);
                    }
                });
            });

            // N√•r en form slettes
            map.on(L.Draw.Event.DELETED, function (event) {
                latInput.value = '';
                lonInput.value = '';
                geoJsonInput.value = '';
                geoTypeInput.value = '';
            });

            // "Use my location" knapp
            geoBtn?.addEventListener('click', () => {
                if (!navigator.geolocation) {
                    alert('Geolocation is not supported by your browser.');
                    return;
                }
                navigator.geolocation.getCurrentPosition(
                    pos => {
                        const { latitude, longitude } = pos.coords;
                        
                        // Fjerner tidligere tegninger
                        drawnItems.clearLayers();
                        
                        // Legger til mark√∏r p√• n√•v√¶rende posisjon
                        const marker = L.marker([latitude, longitude]);
                        drawnItems.addLayer(marker);
                        
                        // Oppdaterer input-felt
                        latInput.value = latitude.toFixed(6);
                        lonInput.value = longitude.toFixed(6);
                        geoTypeInput.value = 'Point';
                        geoJsonInput.value = JSON.stringify({
                            type: "Point",
                            coordinates: [parseFloat(longitude.toFixed(6)), parseFloat(latitude.toFixed(6))]
                        });
                        
                        map.setView([latitude, longitude], 15);
                    },
                    err => alert('Could not get location: ' + err.message),
                    { enableHighAccuracy: true, timeout: 10000 }
                );
            });

            // Viser validation summary bare hvis det er feil
            const vs = document.querySelector('[asp-validation-summary="ModelOnly"]');
            if (vs && vs.innerText.trim().length > 0) vs.style.display = 'block';
        })();
    </script>
}
