@model IS202.NrlApp.Models.ObstacleData
@{
    ViewData["Title"] = "Edit Report";
    var obstacleId = ViewBag.ObstacleId;
}

<div class="container my-4">
    <div class="mb-4">
        <h2 class="mb-0">
            <i class="bi bi-pencil-square me-2 text-primary"></i>Edit Report #@obstacleId
        </h2>
        <p class="text-muted mb-0">Update the obstacle details below</p>
    </div>

    <div class="row g-4">
        <!-- Form column -->
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@obstacleId" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="ObstacleType" class="form-label">
                                Obstacle type <span class="text-danger">*</span>
                            </label>
                            <select asp-for="ObstacleType" class="form-select" required>
                                <option value="">-- Select type --</option>
                                <option>Crane</option>
                                <option>Mast</option>
                                <option>Power line</option>
                                <option>Tower</option>
                                <option>Building</option>
                                <option>Other</option>
                            </select>
                            <span asp-validation-for="ObstacleType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Comment" class="form-label">Comment (optional)</label>
                            <textarea asp-for="Comment" class="form-control" rows="3" 
                                      placeholder="Short description, height if known, nearby reference..."></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-12 col-sm-6 mb-3">
                                <label asp-for="Latitude" class="form-label">Latitude <span class="text-danger">*</span></label>
                                <input asp-for="Latitude" class="form-control" placeholder="Click the map" readonly />
                                <span asp-validation-for="Latitude" class="text-danger"></span>
                            </div>
                            <div class="col-12 col-sm-6 mb-3">
                                <label asp-for="Longitude" class="form-label">Longitude <span class="text-danger">*</span></label>
                                <input asp-for="Longitude" class="form-control" placeholder="Click the map" readonly />
                                <span asp-validation-for="Longitude" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Hidden fields -->
                        <input type="hidden" asp-for="GeometryType" />
                        <input type="hidden" asp-for="GeoJsonData" />

                        <div class="d-flex gap-2 mb-3">
                            <button type="button" id="geoBtn" class="btn btn-primary">
                                <i class="bi bi-geo-alt-fill me-1"></i> Use my location
                            </button>
                            <button type="button" id="clearPointBtn" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i> Clear marker
                            </button>
                        </div>

                        <div class="alert alert-info mb-3">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Note:</strong> After updating, the report status will remain unchanged. 
                            NRL Officers will review any modifications.
                        </div>

                        <div class="d-grid d-sm-flex gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle me-1"></i> Save Changes
                            </button>
                            <a asp-action="MyReports" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Map column -->
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <i class="bi bi-map me-2"></i>Location
                </div>
                <div class="card-body p-0">
                    <div id="editMap" style="height: 500px;"></div>
                </div>
            </div>
            <small class="text-muted d-block mt-2">
                <i class="bi bi-lightbulb"></i> Click on the map to update the location. You can drag the marker to fine-tune the position.
            </small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>

    <script>
        (function () {
            const latInput = document.getElementById("Latitude");
            const lonInput = document.getElementById("Longitude");
            const geoJsonInput = document.getElementById("GeoJsonData");
            const geoBtn = document.getElementById("geoBtn");
            const clearBtn = document.getElementById("clearPointBtn");

            // Get initial values
            const initialLat = parseFloat(latInput.value) || 58.146;
            const initialLon = parseFloat(lonInput.value) || 7.995;

            // Initialize map centered on existing location
            const map = L.map('editMap').setView([initialLat, initialLon], 13);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '&copy; OpenStreetMap'
            }).addTo(map);

            // Disable scroll wheel zoom by default
            map.scrollWheelZoom.disable();
            map.on('focus', () => map.scrollWheelZoom.enable());
            map.on('blur',  () => map.scrollWheelZoom.disable());

            let marker = null;

            // Create initial marker if coordinates exist
            if (latInput.value && lonInput.value) {
                marker = L.marker([initialLat, initialLon], { draggable: true }).addTo(map);
                marker.on('dragend', () => {
                    const { lat, lng } = marker.getLatLng();
                    updatePoint(lat, lng);
                });
            }

            // Set marker and update inputs
            function setPoint(lat, lon) {
                if (!marker) {
                    marker = L.marker([lat, lon], { draggable: true }).addTo(map);
                    marker.on('dragend', () => {
                        const { lat, lng } = marker.getLatLng();
                        updatePoint(lat, lng);
                    });
                } else {
                    marker.setLatLng([lat, lon]);
                }
                updatePoint(lat, lon);
            }

            // Update coordinates and GeoJSON
            function updatePoint(lat, lon) {
                latInput.value = lat.toFixed(6);
                lonInput.value = lon.toFixed(6);
                
                // Generate GeoJSON
                geoJsonInput.value = JSON.stringify({
                    type: "Point",
                    coordinates: [parseFloat(lon.toFixed(6)), parseFloat(lat.toFixed(6))]
                });
            }

            // Click on map to set position
            map.on('click', (e) => {
                setPoint(e.latlng.lat, e.latlng.lng);
            });

            // "Use my location" button
            geoBtn?.addEventListener('click', () => {
                if (!navigator.geolocation) {
                    alert('Geolocation is not supported by your browser.');
                    return;
                }
                navigator.geolocation.getCurrentPosition(
                    pos => {
                        const { latitude, longitude } = pos.coords;
                        setPoint(latitude, longitude);
                        map.setView([latitude, longitude], 15);
                    },
                    err => alert('Could not get location: ' + err.message),
                    { enableHighAccuracy: true, timeout: 10000 }
                );
            });

            // "Clear marker" button
            clearBtn?.addEventListener('click', () => {
                if (marker) { 
                    map.removeLayer(marker); 
                    marker = null; 
                }
                latInput.value = '';
                lonInput.value = '';
                geoJsonInput.value = '';
            });

            // Show validation summary only if there are errors
            const vs = document.querySelector('[asp-validation-summary="ModelOnly"]');
            if (vs && vs.innerText.trim().length > 0) vs.style.display = 'block';
        })();
    </script>
}
