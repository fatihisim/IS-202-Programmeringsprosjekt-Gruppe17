@model IEnumerable<IS202.NrlApp.Models.Obstacle>
@{
    ViewData["Title"] = "My Reports";
    var statusFilter = ViewBag.StatusFilter as string ?? "";
    var typeFilter = ViewBag.TypeFilter as string ?? "";
    var hasActiveFilter = !string.IsNullOrEmpty(statusFilter) || !string.IsNullOrEmpty(typeFilter);
    
    // Statistikk fra ViewBag (ALLE rapporter, ufiltrerte)
    var totalCount = ViewBag.TotalCount ?? 0;
    var pendingCount = ViewBag.PendingCount ?? 0;
    var approvedCount = ViewBag.ApprovedCount ?? 0;
    var rejectedCount = ViewBag.RejectedCount ?? 0;
}

<div class="container my-4">
    <div class="mb-4">
        <h2 class="mb-0">
            <i class="bi bi-file-earmark-person me-2 text-primary"></i>My Reports
        </h2>
        <p class="text-muted mb-0">View and manage your obstacle reports</p>
    </div>

    @if (totalCount == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            <strong>No reports yet.</strong> You haven't created any obstacle reports yet. 
            <a asp-action="DataForm" class="alert-link">Create your first report</a>.
        </div>
    }
    else
    {
        @* Sammendragskort *@
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="card border-warning shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-warning mb-0">Pending</h6>
                                <h2 class="mb-0">@pendingCount</h2>
                            </div>
                            <i class="bi bi-hourglass-split display-4 text-warning opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-success shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-success mb-0">Approved</h6>
                                <h2 class="mb-0">@approvedCount</h2>
                            </div>
                            <i class="bi bi-check-circle display-4 text-success opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-danger shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-danger mb-0">Rejected</h6>
                                <h2 class="mb-0">@rejectedCount</h2>
                            </div>
                            <i class="bi bi-x-circle display-4 text-danger opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* Filtreringsform *@
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <form method="get" asp-action="MyReports" class="row g-3">
                    <div class="col-md-4">
                        <label for="statusFilter" class="form-label fw-semibold">Status</label>
                        <select name="statusFilter" id="statusFilter" class="form-select">
                            <option value="" selected="@(string.IsNullOrEmpty(statusFilter))">All Statuses</option>
                            <option value="Pending" selected="@(statusFilter == "Pending")">Pending</option>
                            <option value="Approved" selected="@(statusFilter == "Approved")">Approved</option>
                            <option value="Rejected" selected="@(statusFilter == "Rejected")">Rejected</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="typeFilter" class="form-label fw-semibold">Obstacle Type</label>
                        <select name="typeFilter" id="typeFilter" class="form-select">
                            <option value="">All Types</option>
                            <option value="Crane" selected="@(typeFilter == "Crane")">Crane</option>
                            <option value="Mast" selected="@(typeFilter == "Mast")">Mast</option>
                            <option value="Power line" selected="@(typeFilter == "Power line")">Power line</option>
                            <option value="Tower" selected="@(typeFilter == "Tower")">Tower</option>
                            <option value="Building" selected="@(typeFilter == "Building")">Building</option>
                            <option value="Other" selected="@(typeFilter == "Other")">Other</option>
                        </select>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-funnel-fill me-1"></i> Apply Filters
                        </button>
                    </div>
                </form>
            </div>
        </div>

        @* Rapporteringstabell *@
        <div class="card shadow-sm">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <span><i class="bi bi-table me-2"></i>Your Reports</span>
                <span class="badge bg-secondary">
                    @if (Model.Count() < totalCount)
                    {
                        @:Showing @Model.Count() of @totalCount reports
                    }
                    else
                    {
                        @:@totalCount total
                    }
                </span>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 60px;">ID</th>
                            <th>Type</th>
                            <th style="width: 100px;">Status</th>
                            <th>Comment</th>
                            <th>Location</th>
                            <th>Created</th>
                            <th style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <i class="bi bi-search text-muted display-4 d-block mb-3"></i>
                                <h5 class="text-muted">No reports found with the current filters</h5>
                                <p class="text-muted">Try adjusting your filter criteria or 
                                    <a asp-action="MyReports">clear all filters</a>
                                </p>
                            </td>
                        </tr>
                    }
                    else
                    {
                    @foreach (var o in Model)
                    {
                        var statusBadgeClass = o.Status switch
                        {
                            "Pending" => "bg-warning text-dark",
                            "Approved" => "bg-success",
                            "Rejected" => "bg-danger",
                            _ => "bg-secondary"
                        };

                        <tr>
                            <td>@o.Id</td>
                            <td>
                                <span class="badge bg-secondary">@o.ObstacleType</span>
                            </td>
                            <td>
                                <span class="badge @statusBadgeClass">@o.Status</span>
                                @if (!string.IsNullOrEmpty(o.Feedback))
                                {
                                    <span class="badge bg-primary text-white ms-1" title="Has feedback from NRL Officer">
                                        <i class="bi bi-chat-left-text"></i>
                                    </span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(o.Comment))
                                {
                                    <div>@(o.Comment.Length > 50 ? o.Comment.Substring(0, 50) + "..." : o.Comment)</div>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                                @if (!string.IsNullOrEmpty(o.Feedback))
                                {
                                    <div class="mt-1 p-2 bg-light border-start border-primary border-3 rounded position-relative">
                                        <small class="text-dark fw-bold">
                                            <i class="bi bi-chat-left-text me-1"></i>
                                            @if (!string.IsNullOrEmpty(o.ProcessedBy))
                                            {
                                                @:@o.ProcessedBy
                                            }
                                            else
                                            {
                                                @:NRL Officer
                                            }
                                        </small>
                                        @if (o.ProcessedAt.HasValue)
                                        {
                                            <small class="text-muted ms-1">
                                                • @o.ProcessedAt.Value.ToString("yyyy-MM-dd HH:mm")
                                            </small>
                                        }
                                        <small class="text-muted fst-italic d-block mt-1">
                                            "@(o.Feedback.Length > 60 ? o.Feedback.Substring(0, 60) + "..." : o.Feedback)"
                                        </small>
                                    </div>
                                }
                            </td>
                            <td>
                                @if (o.Latitude.HasValue && o.Longitude.HasValue)
                                {
                                    <small>@o.Latitude.Value.ToString("F4"), @o.Longitude.Value.ToString("F4")</small>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td>
                                <small>@o.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small>
                            </td>
                            <td>
                                @if (o.Status != "Approved")
                                {
                                    <div class="d-flex gap-1">
                                        <button type="button" class="btn btn-info btn-sm text-white" title="View Details" 
                                                data-bs-toggle="modal" data-bs-target="#viewModal-@o.Id">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <a asp-action="Edit" asp-route-id="@o.Id" class="btn btn-primary btn-sm text-white" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-danger btn-sm text-white" 
                                                data-bs-toggle="modal" data-bs-target="#deleteModal-@o.Id" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>

                                    @* Skjult sletteskjema *@
                                    <form id="delete-form-@o.Id" asp-action="Delete" asp-route-id="@o.Id" 
                                          method="post" style="display:none;">
                                        @Html.AntiForgeryToken()
                                    </form>
                                }
                                else
                                {
                                    <div class="d-flex gap-1 align-items-center">
                                        <button type="button" class="btn btn-info btn-sm text-white" title="View Details" 
                                                data-bs-toggle="modal" data-bs-target="#viewModal-@o.Id">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <span class="badge bg-secondary d-flex align-items-center">
                                            <i class="bi bi-lock-fill me-1"></i>Cannot Edit
                                        </span>
                                    </div>
                                }

                                @* Detaljeringsmodal *@
                                <div class="modal fade" id="viewModal-@o.Id" tabindex="-1" 
                                     data-lat="@o.Latitude" data-lon="@o.Longitude" 
                                     data-geojson="@Html.Raw(o.GeoJsonData)" data-geotype="@o.GeometryType">
                                    <div class="modal-dialog modal-lg modal-dialog-scrollable">
                                        <div class="modal-content">
                                            <div class="modal-header bg-primary text-white">
                                                <h5 class="modal-title text-white">
                                                    <i class="bi bi-info-circle-fill me-2"></i>Report Details - ID: @o.Id
                                                </h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="row g-3">
                                                    <div class="col-12 col-md-6">
                                                        <strong><i class="bi bi-tag me-2"></i>Type:</strong> 
                                                        <span class="badge bg-secondary">@o.ObstacleType</span>
                                                    </div>
                                                    <div class="col-12 col-md-6">
                                                        <strong><i class="bi bi-hourglass me-2"></i>Status:</strong> 
                                                        <span class="badge @statusBadgeClass">@o.Status</span>
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(o.Comment))
                                                    {
                                                        <div class="col-12">
                                                            <strong><i class="bi bi-chat-square-text me-2"></i>Comment:</strong>
                                                            <p class="mb-0 mt-1">@o.Comment</p>
                                                        </div>
                                                    }
                                                    <div class="col-12 col-md-6">
                                                        <strong><i class="bi bi-person me-2"></i>Reporter:</strong> @o.ReporterName
                                                    </div>
                                                    <div class="col-12 col-md-6">
                                                        <strong><i class="bi bi-building me-2"></i>Organization:</strong> @o.Organization
                                                    </div>
                                                    <div class="col-12 col-md-6">
                                                        <strong><i class="bi bi-calendar me-2"></i>Created:</strong> 
                                                        <small>@o.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small>
                                                    </div>
                                                    @if (o.ProcessedAt.HasValue)
                                                    {
                                                        <div class="col-12 col-md-6">
                                                            <strong><i class="bi bi-clock-history me-2"></i>Processed:</strong> 
                                                            <small>@o.ProcessedAt.Value.ToString("yyyy-MM-dd HH:mm")</small>
                                                        </div>
                                                    }
                                                    @if (!string.IsNullOrEmpty(o.Feedback))
                                                    {
                                                        <div class="col-12">
                                                            <div class="alert alert-primary mb-0">
                                                                <strong><i class="bi bi-chat-left-text me-2"></i>Feedback from 
                                                                @if (!string.IsNullOrEmpty(o.ProcessedBy))
                                                                {
                                                                    @:@o.ProcessedBy
                                                                }
                                                                else
                                                                {
                                                                    @:NRL Officer
                                                                }
                                                                </strong>
                                                                @if (o.ProcessedAt.HasValue)
                                                                {
                                                                    <small class="text-muted ms-2">
                                                                        <i class="bi bi-clock me-1"></i>@o.ProcessedAt.Value.ToString("yyyy-MM-dd HH:mm")
                                                                    </small>
                                                                }
                                                                <p class="mb-0 mt-2">@o.Feedback</p>
                                                            </div>
                                                        </div>
                                                    }
                                                    @if (o.Latitude.HasValue && o.Longitude.HasValue)
                                                    {
                                                        <div class="col-12">
                                                            <strong><i class="bi bi-map me-2"></i>Location Map:</strong>
                                                            <div id="map-@o.Id" class="mt-2" style="height: 300px; border-radius: 0.5rem;"></div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @* Slette-bekreftelsesmodal *@
                                @if (o.Status != "Approved")
                                {
                                    <div class="modal fade" id="deleteModal-@o.Id" tabindex="-1">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header bg-danger text-white">
                                                    <h5 class="modal-title text-white">
                                                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Report
                                                    </h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p class="mb-3">Are you sure you want to delete this <strong>@o.ObstacleType</strong> report?</p>
                                                    <div class="alert alert-warning mb-0">
                                                        <i class="bi bi-info-circle me-2"></i>
                                                        <strong>Warning:</strong> This action cannot be undone.
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                        <i class="bi bi-x-circle me-1"></i>Cancel
                                                    </button>
                                                    <button type="button" class="btn btn-danger" onclick="document.getElementById('delete-form-@o.Id').submit();">
                                                        <i class="bi bi-trash me-1"></i>Delete Report
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>

    <script>
        // Initialiserer kart i modaler med GeoJSON-støtte
        document.addEventListener('DOMContentLoaded', function() {
            const viewModals = document.querySelectorAll('[id^="viewModal-"]');
            
            // Definerer linjefarge (tydelige farger for satellittbilde)
            const getLineColor = () => '#00ffff'; // Cyan
            
            // HTML decode helper
            function htmlDecode(input) {
                const doc = new DOMParser().parseFromString(input, 'text/html');
                return doc.documentElement.textContent;
            }
            
            viewModals.forEach(function(modal) {
                modal.addEventListener('shown.bs.modal', function(event) {
                    const modalElement = event.target;
                    const reportId = modalElement.id.replace('viewModal-', '');
                    const mapDiv = document.getElementById('map-' + reportId);
                    
                    if (!mapDiv) return;
                    
                    // Henter koordinater fra data-attributter
                    const lat = parseFloat(modalElement.getAttribute('data-lat'));
                    const lon = parseFloat(modalElement.getAttribute('data-lon'));
                    const geoJsonStr = htmlDecode(modalElement.getAttribute('data-geojson') || '');
                    const geomType = modalElement.getAttribute('data-geotype');
                    
                    if (isNaN(lat) || isNaN(lon)) return;
                    
                    // Sjekker om kart allerede er initialisert
                    if (mapDiv._leaflet_id) return;
                    
                    // Initialiserer kart
                    const map = L.map(mapDiv.id).setView([lat, lon], 15);
                    
                    // Grunnlag: Satellittbilde
                    L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {
                        maxZoom: 19,
                        maxNativeZoom: 18,
                        attribution: '&copy; Esri'
                    }).addTo(map);
                    
                    // Overlag: Etiketter
                    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        maxZoom: 19,
                        opacity: 0.4,
                        attribution: '&copy; OpenStreetMap'
                    }).addTo(map);
                    
                    // Legger til GeoJSON eller markør
                    if (geoJsonStr && geoJsonStr.trim() !== '' && geoJsonStr !== 'null') {
                        try {
                            const geojson = JSON.parse(geoJsonStr);
                            
                            const layer = L.geoJSON(geojson, {
                                style: {
                                    color: getLineColor(),
                                    weight: 4,
                                    opacity: 0.9
                                },
                                pointToLayer: function (feature, latlng) {
                                    return L.marker(latlng);
                                }
                            }).addTo(map);
                            
                            layer.bindPopup('<strong>Report #' + reportId + '</strong><br/>Type: ' + geomType).openPopup();
                            
                            // Zoomer til bounds hvis det er linje/polygon
                            if (typeof layer.getBounds === 'function') {
                                map.fitBounds(layer.getBounds(), { padding: [30, 30] });
                            }
                        } catch (e) {
                            console.error('GeoJSON parse-feil:', e);
                            // Tilbakefall til markør
                            L.marker([lat, lon]).addTo(map)
                                .bindPopup('<strong>Report #' + reportId + '</strong><br/>Lat: ' + lat + '<br/>Lon: ' + lon)
                                .openPopup();
                        }
                    } else {
                        // Tilbakefall: Bruk markør
                        L.marker([lat, lon]).addTo(map)
                            .bindPopup('<strong>Report #' + reportId + '</strong><br/>Lat: ' + lat + '<br/>Lon: ' + lon)
                            .openPopup();
                    }
                    
                    // Retter kartstørrelse etter modal-animasjon
                    setTimeout(function() {
                        map.invalidateSize();
                    }, 300);
                });
            });
        });
    </script>
}