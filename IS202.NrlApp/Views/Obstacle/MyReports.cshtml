@model IEnumerable<IS202.NrlApp.Models.Obstacle>
@{
    ViewData["Title"] = "My Reports";
}

<div class="container my-4">
    <div class="d-flex align-items-center justify-content-between mb-3 flex-wrap gap-2">
        <div>
            <h2 class="mb-0">
                <i class="bi bi-file-earmark-person me-2"></i>My Reports
            </h2>
            <p class="text-muted mb-0">View and manage your obstacle reports</p>
        </div>
        <a asp-controller="Obstacle" asp-action="DataForm" class="btn btn-primary">
            <i class="bi bi-flag-fill me-1"></i> New Report
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            <strong>No reports yet.</strong> You haven't created any obstacle reports yet. 
            <a asp-action="DataForm" class="alert-link">Create your first report</a>.
        </div>
    }
    else
    {
        <!-- Summary cards -->
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="card border-warning shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-warning mb-0">Pending</h6>
                                <h2 class="mb-0">@Model.Count(o => o.Status == "Pending")</h2>
                            </div>
                            <i class="bi bi-hourglass-split display-4 text-warning opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-success shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-success mb-0">Approved</h6>
                                <h2 class="mb-0">@Model.Count(o => o.Status == "Approved")</h2>
                            </div>
                            <i class="bi bi-check-circle display-4 text-success opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-danger shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-danger mb-0">Rejected</h6>
                                <h2 class="mb-0">@Model.Count(o => o.Status == "Rejected")</h2>
                            </div>
                            <i class="bi bi-x-circle display-4 text-danger opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Table -->
        <div class="card shadow-sm">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <span><i class="bi bi-table me-2"></i>Your Reports</span>
                <span class="badge bg-secondary">@Model.Count() total</span>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 60px;">ID</th>
                            <th>Type</th>
                            <th style="width: 100px;">Status</th>
                            <th>Comment</th>
                            <th>Location</th>
                            <th>Created</th>
                            <th style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var o in Model)
                    {
                        var statusBadgeClass = o.Status switch
                        {
                            "Pending" => "bg-warning text-dark",
                            "Approved" => "bg-success",
                            "Rejected" => "bg-danger",
                            _ => "bg-secondary"
                        };

                        <tr>
                            <td>@o.Id</td>
                            <td>
                                <span class="badge bg-secondary">@o.ObstacleType</span>
                            </td>
                            <td>
                                <span class="badge @statusBadgeClass">@o.Status</span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(o.Comment))
                                {
                                    @(o.Comment.Length > 50 ? o.Comment.Substring(0, 50) + "..." : o.Comment)
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td>
                                @if (o.Latitude.HasValue && o.Longitude.HasValue)
                                {
                                    <small>@o.Latitude.Value.ToString("F4"), @o.Longitude.Value.ToString("F4")</small>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td>
                                <small>@o.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Edit" asp-route-id="@o.Id" class="btn btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-danger" 
                                            onclick="confirmDelete(@o.Id, '@o.ObstacleType')" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>

                                <!-- Hidden delete form -->
                                <form id="delete-form-@o.Id" asp-action="Delete" asp-route-id="@o.Id" 
                                      method="post" style="display:none;">
                                    @Html.AntiForgeryToken()
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.FirstOrDefault()?.ProcessorComment))
        {
            <div class="card mt-3 border-info">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-chat-left-text me-2"></i>Feedback from NRL Officer
                </div>
                <div class="card-body">
                    @foreach (var o in Model.Where(x => !string.IsNullOrEmpty(x.ProcessorComment)))
                    {
                        <div class="mb-2">
                            <strong>Report #@o.Id:</strong> @o.ProcessorComment
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>

<script>
function confirmDelete(id, obstacleType) {
    if (confirm(`Are you sure you want to delete this ${obstacleType} report?\n\nThis action cannot be undone.`)) {
        document.getElementById('delete-form-' + id).submit();
    }
}
</script>
