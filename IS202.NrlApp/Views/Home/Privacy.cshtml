@{
    ViewData["Title"] = "Privacy";
    // Norsk kommentar: Viser personvernerklæring for applikasjonen.
    // All synlig tekst er på ENGELSK (krav fra oppgaven).
}

<div class="container my-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0"><i class="bi bi-shield-lock me-2"></i>Privacy</h2>
        <span class="text-muted small">Last updated: @DateTime.UtcNow.ToString("yyyy-MM-dd")</span>
    </div>

    <div class="row g-4">
        <!-- Norsk kommentar: Kort 1 – Hva samler vi inn -->
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <i class="bi bi-collection me-2"></i>What data we collect
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>Reporter name and organization (provided by you)</li>
                        <li>Obstacle details (type, comment)</li>
                        <li>Location (latitude &amp; longitude you pick on the map)</li>
                        <li>Timestamp of the submission</li>
                        <li>Technical logs needed to operate the service</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Norsk kommentar: Kort 2 – Hvordan brukes data -->
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <i class="bi bi-gear-wide-connected me-2"></i>How we use your data
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>To display obstacles on the map for pilots and operators</li>
                        <li>To review and verify reports before publication</li>
                        <li>To maintain service quality and security</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Norsk kommentar: Kort 3 – Sikkerhetstiltak -->
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <i class="bi bi-lock-fill me-2"></i>Security measures
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>Transport security (HTTPS) when available</li>
                        <li>Role-based access for administrative features</li>
                        <li>Input validation and server-side checks</li>
                        <li>Regular dependency updates</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Norsk kommentar: Kort 4 – Dine rettigheter -->
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <i class="bi bi-person-check-fill me-2"></i>Your rights
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>Request a copy, correction, or deletion of your data</li>
                        <li>Withdraw a report if it contains personal information</li>
                        <li>Contact us to raise a privacy concern</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Norsk kommentar: Kort 5 – Lagringstid -->
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <i class="bi bi-hourglass-split me-2"></i>Retention
                </div>
                <div class="card-body">
                    <p class="mb-0">
                        Operational data may be retained as long as necessary to support safety operations,
                        audits, or legal obligations. Non-essential personal data is minimized and removed when no longer needed.
                    </p>
                </div>
            </div>
        </div>

        <!-- Norsk kommentar: Kort 6 – Informasjonskapsler og kontakt -->
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <i class="bi bi-envelope-paper-heart me-2"></i>Cookies &amp; contact
                </div>
                <div class="card-body">
                    <p class="mb-2">
                        We use only essential cookies required for the site to function. No advertising cookies are used.
                    </p>
                    <p class="mb-0">
                        Contact: <a href="mailto:nrl-support@example.org">nrl-support@example.org</a><br />
                        Docs: <a href="https://github.com/" target="_blank" rel="noopener">Operations &amp; testing notes (GitHub)</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Norsk kommentar: Liten note nederst -->
    <p class="text-muted small mt-4">
        This application is a student project. Do not submit sensitive personal data.
    </p>
</div>
