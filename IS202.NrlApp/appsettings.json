{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3307;Database=nrlappdb;User=root;Password=example;"
    // Denne tilkoblingsstrengen brukes når vi kjører verktøy som 'dotnet ef' på egen PC.
    // Vi kobler til MariaDB-containeren via localhost:3307 (eksponert port i Docker).
    // Selve web-applikasjonen i Docker bruker en egen tilkoblingsstreng via miljøvariabel.
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      // Standard loggnivå for applikasjonen
      "Microsoft.AspNetCore": "Warning"
      // Kun advarsler fra rammeverket for å redusere støy i loggene
    }
  },

  "AllowedHosts": "*"
  // Tillater alle vertsnavn i utviklingsmiljøet (praktisk under testing).
}
